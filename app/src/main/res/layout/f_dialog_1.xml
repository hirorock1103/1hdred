<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回数"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/edit_number"
        app:layout_constraintBottom_toBottomOf="@+id/edit_number"
        app:layout_constraintRight_toLeftOf="@+id/edit_number"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:id="@+id/edit_number"
        android:inputType="number"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:text="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memo"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/edit_memo"
        app:layout_constraintBottom_toBottomOf="@+id/edit_memo"
        app:layout_constraintRight_toLeftOf="@+id/edit_memo"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_memo"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_number"
        app:layout_constraintTop_toBottomOf="@+id/edit_number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録"
        android:id="@+id/bt_dialog_reg"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_memo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>